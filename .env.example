# Morning Stock Screener Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5

# Serper Configuration (for future web search integration)
SERPER_API_KEY=your_serper_api_key_here

# Email Configuration (for future SMTP integration)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Application Configuration
APP_NAME=Morning Stock Screener
DEBUG=false
LOG_LEVEL=INFO

# Email Schedule (for future cron job)
EMAIL_SCHEDULE_HOUR=9
EMAIL_SCHEDULE_MINUTE=30
EMAIL_TIMEZONE=Europe/London